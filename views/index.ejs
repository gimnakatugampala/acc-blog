<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
<body>
    <!-- Header -->
    <%- include('./partials/nav.ejs')%>

    <!-- Blogs -->
    <div id="blogs">
        <div class="container">
            <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
            <a href="/blogs/<%= blog.id %>" class="blogs">
                <span id="title">
                <h4><%= blog.title %></h4> <p>&bull; by <%= blog.email %></p>
             </span>
                <p><%= blog.body %></p>
            </a>
            <% }) %>
            <% }else { %>
                <h3>No Posts</h3>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs')%>

    
</body>
</html>